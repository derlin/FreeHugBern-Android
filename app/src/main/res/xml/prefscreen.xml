<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:summary="general"
        android:title="General">

        <Preference
            android:defaultValue=""
            android:key="pref_paired_device"
            android:title="Paired LilyPad" />


        <ListPreference
            android:defaultValue="0"
            android:entries="@array/pref_what_to_display_list"
            android:entryValues="@array/pref_what_to_display_values"
            android:key="pref_display_type"
            android:negativeButtonText="@null"
            android:positiveButtonText="@null"
            android:title="What counter to display" />

    </PreferenceCategory>

    <PreferenceCategory
        android:summary="Extras"
        android:title="extras">

        <Preference
            android:key="pref_sync"
            android:title="force sync" />

        <Preference
            android:key="pref_reset"
            android:title="unbind from device" />

    </PreferenceCategory>

</PreferenceScreen>